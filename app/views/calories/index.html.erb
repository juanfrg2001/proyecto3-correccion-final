
<% if user_signed_in? %>

  <section class="hero is-medium fondo2">
    <div class="hero-body has-text-centered">
      <div class="container is-max-desktop">
        <div class="navbar-end">
          <div class="navbar-item">
            <div class="buttons">
            </div>
          </div>
        </div>
      </div>
      <div class="container is-max-desktop">
      <div id="hero-input-group" class="field has-addons has-addons-centered">
      </div>
    </div>
    </div>
  </section>


  </br>
  </br>
  </br>
  </br>
  <div class="container is-max-desktop">
    <div class="columns">
      <div class="column is-9">
        <section class="hero is-info welcome is-small">
          <div class="hero-body">
            <div class="container">
              <h1 class="title">
                Email -- <%= current_user.email %>
              </h1>
              <h2 class="subtitle">
                We hope you can meet your goal today
              </h2>
            </div>
          </div>
        </section>
      </div>
      </br>
      </br>
  </div>
    <%= form_tag calories_path , method: :get do %>
      <div class="card-content">
        <div class="content">
          <p class = "colorWhite">Search filter by date :</p>
          <div class="control has-icons-left has-icons-right search-field">
            <%= date_field :keyword,nil ,placeholder:"Beginner date", class:"input is-large" %><span class="icon is-medium is-left"><i class="fa fa-search"></i></span>
            <%= date_field :keyword2,nil ,placeholder:"Finally date", class:"input is-large" %><span class="icon is-medium is-left"><i class="fa fa-search"></i></span>
            </br>
            </br>
          </div>
        </div>
        <%= content_tag :button, type: :submit do %>
          Search by Date
        <% end %>
      </div>
    <% end %>
    <%= form_tag calories_path , method: :get do %>
      <div class="card-content">
        <div class="content">
          <p class = "colorWhite">Search filter by comments</p>
          <div class="control has-icons-left has-icons-right search-field">
            <%= text_field_tag :keyword3,nil ,placeholder:"Search by description", class:"input is-large",width:"100" %><span class="icon is-medium is-left"><i class="fa fa-search"></i></span>
            </br>
            </br>
          </div>
        </div>
        <%= content_tag :button, type: :submit do %>
          Search
        <% end %>
      </div>
    <% end %>
    </br>
    <%= link_to 'See all Registers', calories_path , class:"button is-link is-fullwidth has-text-weight-medium is-medium"%>
    </br>
  <br class="featured">

  <div class="card-table">
    <div class="content">
      <table class="table is-fullwidth is-striped">
        <tbody>
        <%= will_paginate %>
        <% @calories.each do |calory| %>
          <tr>
            <td width="5%"><i class="fa fa-bell-o"></i></td>
            <td><%= calory.user.email %><a> Register date : </a> <%= calory.date_calory %></td>
            <td class="level-right"><%= link_to 'Show' , calory ,class:"button is-small is-primary" %><a>|</a>  <%= link_to 'Destroy', calory, method: :delete, data: { confirm: 'Are you sure?' } , class:"button is-small is-primary"%><a>|</a> <%= link_to 'Update', edit_calory_path(calory), class:"button is-small is-primary" %></td>
          </tr>
        <% end %>

        </tbody>
      </table>
    </div>
  </div>

  </br>
  </br>
  </br>
  </br>
  <section class="info-tiles">
    <div class="tile is-ancestor has-text-centered">
      <div class="tile is-parent">
        <article class="tile is-child box">
          <p class="title"><%= current_user.cont_register %> </p>
          <p class="subtitle">Register cont</p>
        </article>
      </div>
    </div>
  </section>
  </br>
    </br>
    </br>
    </br>
    <div class="columns">
      <div class="column is-3">
        <article>
          <figure class="image is-5by3">
            <%= link_to image_tag("image_Home/image_progress.jpg", alt: "fondo image", width:"160"),
                        new_calory_path %>
          </figure>
          <h2 class="subtitle">Creating Calories Register</h2>
        </article>
      </div>
      <div class="column is-3">
        <article>
          <figure class="image is-5by3">
            <%= link_to image_tag("image_Home/img-progreso_index.jpg", alt: "fondo image", width:"100", height: "100", class:"image"),
                        chart_path %>
          </figure>
          <h2 class="subtitle">See you progress</h2>
        </article>
      </div>
      <div class="column is-3">
        <article>
          <figure class="image is-5by3">
            <%= link_to image_tag("image_Home/img compartir.jpg", alt: "fondo image", width:"100", height: "100", class:"image"),
                        new_password_reset_path %>
          </figure>
          <h2 class="subtitle">Share your proyect</h2>
        </article>
      </div>

    </div>
    </br>
    </br>
    </br>
    </br>
    <section class="blog-posts">
      <div class="container">
        <div class="columns">
          <div class="column is-10 is-offset-1">
            <div class="column is-12 post">
              <article class="columns featured">
                <div class="column is-7 post-img ">
                  <%= image_tag("image_Home/imagen-peso.jpg",alt:"Featured Image", width: "400") %>
                </div>
                <div class="column is-5 featured-content va">
                  <div>
                    <h3 class="heading post-category">Category Name</h3>
                    <h1 class="title post-title">Weight</h1>
                    <p class="post-excerpt">
                      Register your weight</p>
                    <br>
                    <%= link_to "Register", new_weight_path , class:"button is-primary", style: "Width:300px"%>
                    </br>
                    <br>
                    <%= link_to "Enter", weights_path , class:"button is-primary", style: "Width:300px"%>
                  </div>

                </div>
              </article>
            </div>
          </div>
        </div>
      </div>
    </section>
    </br>
    </br>
    </br>
  </div>
  <script type="text/javascript">
      $(document).ready(function() {
          $('input[class="daterange"]').daterangepicker();
      });
  </script>

<% else %>
<section class="hero is-medium fondo1">
  <div class="hero-body">
    <div class="container has-text-centered">
    </div>
  </div>
</section>
</br>
</br>
<section class="blog-posts">
  <div class="container">
    <div class="columns">
      <div class="column is-10 is-offset-1">
        <div class="columns featured-post is-multiline">
          <div class="column is-12 post">
            <article class="columns featured">
              <div class="column is-7 post-img ">
                <%= image_tag("image_Home/imagen_fit_index.jpg",alt:"Featured Image", width: "400") %>
              </div>
              <div class="column is-5 featured-content va">
                <div>
                  <h3 class="heading post-category">Category Name</h3>
                  <h1 class="title post-title">Take care of your body</h1>
                  <p class="post-excerpt">
                    The most effective way to take care of your body is by recording your calories in order to reach your goal.</p>
                  <br>
                  <%= link_to "Enter", new_user_session_path , class:"button is-primary"%>
                </div>

              </div>
            </article>
          </div>
        </div>
        </br>
        <hr>
        </br>
        </br>
        <div class="columns is-multiline">
          <div class="column post is-6">
            <article class="columns is-multiline">
              <div class="column is-12 post-img">
                <%= image_tag("image_Home/imagen_login2.jpg",alt:"Featured Image", width: "300") %>
              </div>
              <div class="column is-12 featured-content ">
                <h3 class="heading post-category">Category Name</h3>
                <h1 class="title post-title">Login</h1>
                <p class="post-excerpt">Welcome back we hope you can keep recording your goals.</p>
                <br>
                <%= link_to 'Login', new_user_session_path,class:"btn btn-default", class:"button is-primary" %>
              </div>
            </article>
          </div>
          <div class="column post is-6">
            <article class="columns is-multiline">
              <div class="column is-12 post-img">
                <%= image_tag("image_Home/image_home_register.jpg",alt:"Featured Image", width: "300") %>
              </div>
              <div class="column is-12 featured-content ">
                <h3 class="heading post-category">Category Name</h3>
                <h1 class="title post-title">Register</h1>
                <p class="post-excerpt">Welcome, it's time to start your life by recording your calories to reach your goal</p>
                <br>
                <%= link_to 'Register', new_user_registration_path,class:"btn btn-default", class:"button is-primary" %>
              </div>
            </article>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
</br>
</br>



<% end %>
<script type="text/javascript">
    $(document).ready(function() {
        $('input[class="daterange"]').daterangepicker();
    });
</script>
